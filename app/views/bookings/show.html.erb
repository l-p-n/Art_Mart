<div class="container">
  <h1>Booking confirmation</h1>

  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mt-5">
      <img src="<%= @booking.artwork.photo %>" alt="">
    </div>
    <div class="col-12 col-lg-6 mt-5">
      <h4><%= @booking.artwork.title %></h4>
      <p><%= @booking.artwork.artist %></p>
      <p><%= @booking.artwork.style %></p>
      <p><%= @booking.artwork.date %></p>
      <p><%= @booking.artwork.description %></p>
      <p><%= @booking.artwork.price_per_day %></p>
      <p><%= @booking.start_date %></p>
      <p><%= @booking.end_date %></p>
      <% duration = @booking.end_date - @booking.start_date %>
      <% total_price = duration * @booking.artwork.price_per_day %>
      <h5>Total price: Â£<%= total_price %></h5>
    </div>
  </div>
</div>
