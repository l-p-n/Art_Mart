<div class="container">
  <h1 class="pt-5">Booking confirmation</h1>

  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mt-5 pr-3">
      <%# <div class="artwork-img-lg"> %>
        <% if @booking.artwork.photo.key %>
          <%= cl_image_tag @booking.artwork.photo.key, width: 600, crop: :fill  %>
        <% else %>
          <img src="/assets/Hockney-1024x809.png" alt="">
        <% end %>
      <%# </div> %>
    </div>
    <div class="col-12 col-lg-6 mt-5 pl-3">
      <h2>Booking details</h2>
      <h3><%= @booking.artwork.title %></h3>
      <h4><%= @booking.artwork.artist %>  |  <%= @booking.artwork.date %></h5>
      <p style="color:#F60201"><%= @booking.artwork.style %></p>
      <p><%= @booking.artwork.description %></p>
      <p><strong>Price per day:</strong> £<%= @booking.artwork.price_per_day %></p>
      <p><strong>Booking start date:</strong> <%= @booking.start_date %></p>
      <p><strong>Booking end date:</strong> <%= @booking.end_date %></p>
      <% duration = @booking.end_date - @booking.start_date %>
      <% total_price = duration * @booking.artwork.price_per_day %>
      <h5>Total price: £<%= total_price %></h5>
    </div>
  </div>
</div>
