<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mt-5">
      <h1>Add an artwork</h1>
      <br>
      <%= simple_form_for @artwork do |f| %>
        <%= f.input :title %>
        <%= f.input :artist %>
        <%= f.input :photo, as: :file %>
        <%= f.input :price_per_day %>
        <%= f.input :style, :collection => %w[Abstract Impressionist Cubist Realist Surrealist Minimalist Other]%>
        <%= f.input :description %>
        <%= f.input :date %>
        <%= f.submit "Add artwork", class: "btn btn-slim" %>
      <% end %>
      <br>
      <%= link_to "Back to artworks", artworks_path %>
      <br>
      <br>
    </div>
  </div>
</div>
