<div class="container">

  <h1>Edit your listed artwork</h1>

  <%= simple_form_for :artwork do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :price_per_day, label: "Price" %>
  <%= f.input :artist, label: "Artist name" %>
  <%= f.input :date, label: "Date" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :style, label: "Style" %>
  <%= f.submit "Update artwork" %>
  <% end %>

  <%= link_to "Back to artworks",  artworks_path %>

</div>
