<div class="navbar navbar-expand-sm navbar-lewagon">
  <div class="container-fluid">
      <%= link_to image_tag("ArtMartTransparentCropped.png", height: 70), root_path, alt: "ArtMart logo" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active nav-item-links">
            <%= link_to "About", pages_about_path, class: "nav-link" %>
          </li>
          <li class="nav-item active browse-item nav-item-links">
            <%= link_to "Browse Artworks", artworks_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown d-flex align-items-center">
            <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle nav-avatar", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My account", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Upload an artwork", new_artwork_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
